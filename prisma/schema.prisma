datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  ratings      Int[]
  creationDate DateTime
}

enum UserRole {
  client
  admin
  provider
}

model User {
  id       String   @id @default(uuid())
  fullName String
  userRole UserRole @default(client)

  createdAt   DateTime
  createdById String
}

model Equipment {
  id           String  @id @default(uuid())
  name         String
  model        String?
  serialNumber String?

  createdAt   DateTime
  createdById String
  Request     Request[]
}

model Request {
  id          String        @id @default(uuid())
  description String
  severity    Int
  status      RequestStatus
  equipmentId String
  equipment   Equipment     @relation(fields: [equipmentId], references: [id])

  createdAt   DateTime
  createdById String
}

enum RequestStatus {
  internal
  dispatch
  pending
  completed
}
